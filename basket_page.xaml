<Page x:Class="KR_SunArt_shusharina.basket_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR_SunArt_shusharina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="basket_page">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/background.jpg"/>
        </Grid.Background>
        <TextBlock Margin="10" HorizontalAlignment="Center" FontSize="22" FontWeight="Bold">Корзина</TextBlock>
        <ListView x:Name="basket_lb" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 60 0 0" Width="600" Height="250" FontSize="16" BorderBrush="LightBlue" BorderThickness="3">
            
        </ListView>
        <TextBlock Name="txtbl" HorizontalAlignment="Center" Background="Transparent" Width="300" Margin="0 250 0 0" Height="50" FontSize="20"></TextBlock>
        <StackPanel Margin="0 380 0 0" HorizontalAlignment="Center">
            <Button x:Name="oplata" FontSize="14" Height="30" Background="LightBlue" Click="oplata_Click">Оплатить</Button>
        </StackPanel>
    </Grid>
</Page>
