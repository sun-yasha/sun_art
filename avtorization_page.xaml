<Page x:Class="KR_SunArt_shusharina.avtorization_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR_SunArt_shusharina"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtorization_page">

    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="Resources/background.jpg"/>
        </StackPanel.Background>
        <TextBlock Margin="0 50 0 20" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30">Аккаунт</TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0 0 0 50" FontSize="20">Авторизация</TextBlock>
        <WrapPanel HorizontalAlignment="Center" Margin="15">
            <TextBlock Margin="50 0" FontSize="18">Логин</TextBlock>
            <TextBox Name="login" Width="200"></TextBox>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center" Margin="15">
            <TextBlock Margin="45 0" FontSize="18">Пароль</TextBlock>
            <PasswordBox Name="password" Width="200"></PasswordBox>
        </WrapPanel>
        <Button Content="Войти" Click="Button_Click" Margin="0 30 0 10" Height="30" Background="LightBlue" FontSize="14"></Button>
        <Button Name="noacc" HorizontalAlignment="Center" FontSize="14" FontStyle="Italic" Background="Transparent" Click="noacc_Click">У меня нет аккаунта :(</Button>
    </StackPanel>
</Page>
